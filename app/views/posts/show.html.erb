<p id="notice"><%= notice %></p>

<p>
  <b>Content:</b>
  <%= @post.content %>
</p>

<h2>Comments</h2>
<% if !@comments.nil? %>
  <% @comments.each do |comment| %>
    <p>
      <b>Comment:</b>
      <%= comment.content %>
    </p>
  <% end %>
<% end %>

<h2>Add a comment:</h2>
<%= form_for @comment do |f| %>
  <div class="field">
    <%= f.label :content %><br />
    <%= f.text_area :content %>
  </div>
  <%= f.hidden_field :post_id, :value => "#{@post.id}" %>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>


<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>
